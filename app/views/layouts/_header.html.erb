<nav class="navbar navbar-default" role="navigation">
  <!-- Brand and toggle get grouped for better mobile display -->
  <div class="navbar-header">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <i class="fa icon-custom fa-twitter fa-3x"></i>
  </div>

  <!-- Collect the nav links, forms, and other content for toggling -->
  <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    <ul class="nav navbar-nav">
      <li><%= link_to "Home", root_path %></li>
      <li><%= link_to "About", about_path %></li>
      <li><%= link_to "Help", help_path %></li>
    </ul>
    
    <ul class="nav navbar-nav navbar-right">
      <% if signed_in? %>
      <li><%= link_to "Users", users_path %></li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Account <b class="caret"></b></a>
        <ul class="dropdown-menu fa-ul">
          <li><i class="fa-li fa fa-user"></i><%= link_to "Profile", current_user %></li>
          <li><i class="fa-li fa fa-wrench"></i><%=link_to "Settings", edit_user_path(current_user) %></li>
          
          <li class="divider"></li>
          <li><i class="fa-li fa fa-sign-out"></i><%= link_to "Sign out", signout_path, method: "delete" %></li>
        </ul>
      </li>
      <% else %>
      <a class="btn navbar-btn btn-info btnpad" href="<%= signin_path %>" role="button">Sign in</a>      
      <% end %>
    </ul>
  </div><!-- /.navbar-collapse -->
</nav>




