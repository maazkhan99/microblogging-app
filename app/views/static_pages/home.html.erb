<% if signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-6">
      <legend>Micropost Updates</legend>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>

<div class="center">
<h1>Welcome to the Microblogging App</h1>

<p>This is the home page for the Microblogging app made in Ruby on Rails</p>
<p><%= link_to "Sign up now!", signup_path, class: "btn btn-custom btn-lg buttonText" %></p>
</div>
<% end %>
